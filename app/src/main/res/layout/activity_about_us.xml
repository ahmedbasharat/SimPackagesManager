<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/backcolor"
    tools:context="com.example.wolfgang.firebasepractice.aboutUs">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Packages"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv1"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv1"
        android:layout_below="@id/tv1"
        android:layout_marginTop="15dp"
        android:src="@drawable/displaysmall"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv1"
        android:id="@+id/tv2"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Developers"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:id="@+id/tv3"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="-Ahmed Basharat  03224345929"
        android:textSize="15dp"
        android:textStyle="italic"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:id="@+id/tv5"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"

        android:layout_marginLeft="20dp"
        android:text="Help to Translate App"
        android:textSize="17dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv5"
        android:id="@+id/tv6"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="End User License Agreement"
        android:textSize="17dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv6"
        android:id="@+id/tv7"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Privacy Policy"
        android:textSize="17dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv7"
        android:id="@+id/tv8"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="Open Source Liscences"
        android:textSize="17dp"
        android:textStyle="bold"

        />
</RelativeLayout>
