<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interText1"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/interText1"
            android:id="@+id/interText2"
            android:text="Timing"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interText1"
            android:layout_toRightOf="@id/interText2"
            android:layout_marginLeft="20dip"
            android:id="@+id/interText3"
            android:textSize="18dip"
            />

        <TextView
            android:layout_marginTop="6dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interText2"
            android:id="@+id/interText4"
            android:text="Volume"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dip"

            />

        <TextView
            android:layout_marginTop="6dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interText2"
            android:layout_toRightOf="@id/interText4"
            android:layout_marginLeft="18dip"
            android:id="@+id/interText5"
            android:textSize="18dip"
            />

        <Button
            android:layout_marginTop="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interText4"
            android:id="@+id/interBtn1"
            android:text="Activate"
            android:background="@android:color/holo_orange_dark"
            />

        <Button
            android:layout_marginTop="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/interBtn1"
            android:layout_below="@id/interText4"
            android:text="Deactivate"
            android:id="@+id/interBtn2"
            android:background="@android:color/holo_green_light"
            />

        <Button
            android:layout_marginTop="18dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interBtn3"
            android:layout_toEndOf="@id/interBtn2"
            android:layout_below="@id/interText4"
            android:text="Save"
            android:background="@android:color/holo_blue_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/interBtn2"
            android:layout_below="@id/interText5"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="15dip"
            android:id="@+id/interText6"
            />





    </RelativeLayout>




</android.support.constraint.ConstraintLayout>